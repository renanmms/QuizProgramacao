@{
    ViewData["Title"] = "Home Page";
}
@model QuizViewModel;

<div class="text-center">
    <h1 class="display-4">Quiz de programação</h1>
</div>

@foreach (var pergunta in Model.Perguntas)
{
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Questão @pergunta.Id</h5>
      <p class="card-text">@pergunta.Descricao</p>
      <div class="form-group">
        <input type="radio" name="q1" value="true" >
        <label for="">Verdadeiro</label>
        <input type="radio" name="q1" value="false" />
        <label for="">Falso</label>
      </div>
    </div>
  </div>
}
